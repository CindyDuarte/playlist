<h1>Playlists App</h1>

<!-- <h6> Hola <%= @one_user.email%> </h6><br> -->
<h6> Hola <%= current_user.email%> </h6><br>

<% if user_signed_in? %>
  <button type="button" name="Salir"><%= link_to "Sing Out", destroy_user_session_path, :method => :delete %></button><br>
<%end%><br>


<button type="button" name="Crear"><%= link_to "Nueva Playlist", new_playlist_path %></button><br><br>

<h2>Mis Playlists</h2>

<ul>
  <% @one_user.playlists.each do |playlist|%>
  <li>
    <p>
      <%=link_to playlist.name, playlist_path(playlist)%>
    </p>
    <button type="button" name="Editar"><%=link_to "Editar", edit_playlist_path(playlist)%></button><br><br>

    <%= form_for playlist, :method => :delete do |f| %>
    <%= f.submit %>
    <% end %><br><br>

  </li>
  <%end%>
</ul>

<h2>Todas las playlists</h2>

<ul>
  <% @playlists.each do |playlist|%>
  <li>
    <p>
      <%=link_to playlist.name, playlist_path(playlist)%>
    </p>

  </li>
  <%end%>
</ul>


<h2>Playlists Todos los Usuarios</h2>

<ul>
  <% @users.each do |user|%>
  <li>
    <p>
      <%=link_to user.email, playlist_path(user)%>
    </p>
  </li>
  <%end%>
</ul><br>

