<h2>Mis Playlists</h2>

<ul>
  <% @one_playlist.users.each do |user|%>
  <li>
    <p>
      <%=link_to user.email, user_path(user)%>
    </p>
    <button type="button" name="Editar"><%=link_to "Editar", edit_user_path(user)%></button><br><br>

    <%= form_for user, :method => :delete do |f| %>
    <%= f.submit %>
    <% end %><br><br>

  </li>
  <%end%>
</ul>

